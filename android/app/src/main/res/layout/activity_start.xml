<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context=".StartActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <EditText
            android:id="@+id/start_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:inputType="none"
            android:text="@string/start_activity_title"
            android:textAlignment="center"
            android:textColor="@color/popOfOrange"
            android:textSize="32sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <Button
            android:id="@+id/cipher_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:fontFamily="serif-monospace"
            android:text="Ciphers"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/hist_button"
            app:layout_constraintEnd_toStartOf="@+id/puzz_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/puzz_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:fontFamily="serif-monospace"
            android:text="Puzzles"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/learn_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cipher_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/hist_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:fontFamily="serif-monospace"
            android:text="History"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/learn_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cipher_button" />

        <Button
            android:id="@+id/learn_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/grey"
            android:fontFamily="serif-monospace"
            android:text="Learn"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/hist_button"
            app:layout_constraintTop_toBottomOf="@+id/puzz_button" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>